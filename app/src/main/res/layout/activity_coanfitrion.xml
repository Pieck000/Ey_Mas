<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".coanfitrion.CoanfitrionActivity">

    <TextView
        android:id="@+id/tv_can"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="event_title"
        android:textSize="35dp"
        android:textColor="@color/purple_700"
        android:gravity="center"
        android:layout_margin="20dp"/>
    <ViewFlipper
        android:id="@+id/vf_imgs_can"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/tv_ubi_can"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="event_ubi"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_fech_can"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="event_fecha"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"/>
    <TextView
        android:id="@+id/tv_time_can"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="event_hora"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/bt_inv_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="@string/inv_can"
        android:textSize="18dp"
        app:icon="@drawable/ic_inv"/>
    <Button
        android:id="@+id/bt_prov_can"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="@string/prov_can"
        android:textSize="18dp"
        app:icon="@drawable/ic_shop"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bts_scan_can"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:text="@string/scan_can"
        app:iconTint="@color/purple_500"
        android:layout_gravity="center"
        app:icon="@drawable/ic_security"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bts_out_can"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:text="SALIR"
        app:iconTint="@color/purple_500"
        android:layout_gravity="center"
        app:icon="@drawable/ic_out"/>
</LinearLayout>