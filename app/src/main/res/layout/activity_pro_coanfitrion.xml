<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".coanfitrion.ProCoanfitrionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_proovedor"
        android:layout_gravity="center"
        android:textColor="@color/purple_500"
        android:textSize="25dp"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombre_proov"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginHorizontal="20dp"/>
    <EditText
        android:id="@+id/edit_nom_proca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Proveedor"
        android:inputType="textPersonName"
        android:layout_marginHorizontal="20dp"
        android:textSize="18dp"
        android:layout_gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/correo_proov"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginHorizontal="20dp"/>
    <EditText
        android:id="@+id/edit_correo_proca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/app_correo_hint"
        android:inputType="textEmailAddress"
        android:layout_marginHorizontal="20dp"
        android:textSize="18dp"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/personas_proov"
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edit_pers_proca"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:hint="1"
                android:textAlignment="center"
                android:inputType="number"
                android:textSize="18dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/telefono_proov"
                android:textColor="@color/black"
                android:textSize="20dp"/>
            <EditText
                android:id="@+id/edit_tel_proca"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="5512437809"
                android:textAlignment="center"
                android:inputType="number"
                android:textSize="18dp"/>
        </LinearLayout>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:fillViewport="true"
        android:layout_marginTop="5dp">
        <ListView
            android:id="@+id/lv_proca"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/bt_add_proca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/add_inv"
            android:textSize="18dp"
            app:icon="@drawable/ic_inv"
            android:layout_marginHorizontal="5dp"/>
        <Button
            android:id="@+id/bt_list_proca"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:icon="@drawable/ic_list"
            android:text="@string/list_inv"
            android:textSize="18dp"
            android:layout_marginHorizontal="5dp"/>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/bts_back_proca"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:textSize="16dp"
        android:text="Atras"
        app:iconTint="@color/purple_500"
        android:layout_gravity="center"
        app:icon="@drawable/ic_back"/>

</LinearLayout>